<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Filters -->
  <filter>
  	<filter-name>LoginFilter</filter-name>
  	<filter-class>com.senselessweb.cradiobackend.web.LoginFilter</filter-class>
  </filter>
  
  <filter-mapping>
  	<filter-name>LoginFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>

  <!-- Servlets -->
  <servlet>
    <servlet-name>cRadioStorageServlet</servlet-name>
    <servlet-class>com.senselessweb.cradiobackend.server.CRadioStorageServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>cRadioStorageServlet</servlet-name>
    <url-pattern>/cradiobackend/cRadioStorage</url-pattern>
  </servlet-mapping>
  
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>CRadioBackend.jsp</welcome-file>
  </welcome-file-list>

</web-app>
